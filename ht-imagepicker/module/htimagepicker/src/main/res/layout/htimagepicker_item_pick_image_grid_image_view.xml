<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/pick_image_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/pick_image_mark_rect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/pick_image_mark_rect"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/pick_image_mark_corner"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/pick_image_mark_corner"
        android:visibility="gone" />

    <TextView
        android:id="@+id/order_number"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="bottom|end"
        android:gravity="center"
        android:text=""
        android:textColor="@color/gray_32"
        android:textSize="13dp" />

</FrameLayout>
